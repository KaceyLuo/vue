{"id":"render7.html","dependencies":[],"generated":{"html":"<!DOCTYPE html>\r\n<html lang=\"en\">\r\n<head>\r\n    <meta charset=\"UTF-8\">\r\n    <meta http-equiv=\"X-UA-Compatible\" content=\"IE=edge\">\r\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\r\n    <title>函数化组件的应用</title>\r\n</head>\r\n<body>\r\n    <div id=\"app\">\r\n        <my-component value=\"haha\">\r\n        \r\n        </my-component>\r\n\r\n    </div>\r\n\r\n\r\n\r\n    <script src=\"https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js\"></script>\r\n    <script>\r\n        //this.text=====context.props.text\r\n        //this.$slots.default===context.children\r\n        Vue.component('my-component',{\r\n            //表示当前VUE实例无状态、无实例（无this）\r\n            functional:true,\r\n            render:function(createElement,context){\r\n                return createElement('button',{\r\n                    on:{\r\n                        click:function(){\r\n                            //context代表上下文对象\r\n                            console.log(context)\r\n                            console.log(context.parent)//表示父组件\r\n                            \r\n                            console.log(context.parent.msg)\r\n                            console.log(context.props.value)\r\n                            //console.log(this.value)//undefined 此时的this代表的是window对象\r\n\r\n                        }\r\n                    }\r\n                },'点击我学习context')\r\n            },\r\n            props:['value']\r\n            \r\n        })\r\n        var app= new Vue({\r\n            el:\"#app\",\r\n            data:{\r\n                msg:'我是父组件的内容'\r\n            },\r\n        })\r\n    </script>\r\n</body>\r\n</html>"},"hash":"cd9f8efbdd3377ba1e63bfade06d5f3a","cacheData":{}}